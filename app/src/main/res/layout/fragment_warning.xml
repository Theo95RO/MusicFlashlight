<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.btheo95.musicflashlight.fragment.WarningFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_warning_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center" />
            <!--android:text="@string/fragment_warning_title"-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/ic_warning_black_24dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/fragment_warning_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center" />
        <!--android:text="@string/fragment_warning_subtitle"-->

        <TextView
            android:id="@+id/fragment_warning_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start" />
        <!--android:text="@string/fragment_warning_description"-->
    </LinearLayout>

</FrameLayout>
